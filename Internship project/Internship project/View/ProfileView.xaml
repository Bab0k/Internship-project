<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Internship_project.View.ProfileView"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="ic_save3x.png" Command="{Binding SaveData}"/>

    </ContentPage.ToolbarItems>
    <StackLayout Spacing="20" Padding="20">
        
        
        <Image WidthRequest="200" HeightRequest="250" VerticalOptions="Start"
                     BackgroundColor="Transparent" Source="{Binding Path} ">
            <Image.GestureRecognizers >
                <TapGestureRecognizer Command="{Binding PickPhotoCommand}"/>
            </Image.GestureRecognizers>
        </Image>
        
        
        <Entry WidthRequest="300" Placeholder="NickName" Text="{Binding NickName}"
               HorizontalOptions="CenterAndExpand"/>
        <Entry WidthRequest="300" Placeholder="Name" Text="{Binding Name}"
               HorizontalOptions="CenterAndExpand"/>
        <Editor WidthRequest="300" HeightRequest="200" BackgroundColor="Gray" Placeholder="Description" Text="{Binding Description}" 
                HorizontalOptions="CenterAndExpand"/>

    </StackLayout>
</ContentPage>