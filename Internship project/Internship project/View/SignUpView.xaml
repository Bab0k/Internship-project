<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Internship_project.View.SignUpView"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Login" x:Name="UserLogin" Text="{Binding Login}"
                   VerticalOptions="EndAndExpand" WidthRequest="250"
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Password" IsPassword="true" x:Name="UserPassword" Text="{Binding Password}"
                   WidthRequest="250"
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Confirm password" IsPassword="true" x:Name="ConfirmUserPassword" Text="{Binding ConfirmUserPassword}"
                   VerticalOptions="StartAndExpand" WidthRequest="250"
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Sign Up" x:Name="SignUp" Command="{Binding NavigationCommand}"
                    HorizontalOptions="CenterAndExpand" WidthRequest="250"
                    VerticalOptions="StartAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
