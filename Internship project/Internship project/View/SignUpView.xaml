<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Internship_project.View.SignUpView">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal" VerticalOptions="Center" >
            <Label Text="Users SignUp" FontAttributes="Bold" FontSize="Medium" />
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Login" TextChanged="Entry_TextChanged" x:Name="UserLogin"
                   VerticalOptions="EndAndExpand" WidthRequest="250"
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Password" IsPassword="true" TextChanged="Entry_TextChanged" x:Name="UserPassword"
                   VerticalOptions="StartAndExpand" WidthRequest="250"
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Password" IsPassword="true" TextChanged="Entry_TextChanged" x:Name="ConfirmUserPassword"
                   VerticalOptions="StartAndExpand" WidthRequest="250"
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Sign Up"  Clicked="Button_Clicked" x:Name="SignUp" 
                    HorizontalOptions="CenterAndExpand" WidthRequest="250"
                    VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
